@model List<CommentAdminListModel>
@{
	Layout = "_LayoutAdmin";
}

<h3 class="mb-4 text-center">En Son Yapılan Yorumlar</h3>
<div class="container-fluid mt-5 ">
	<div class="row">
		<div class="col-12">
			<ul class="list-unstyled px-5">
				@for (int i = 0; i < Model.Count; i++)
				{
					<li class="p-2" style="width:100%;@(i % 2 == 0 ? "":"background-color:#c0f5ff75")"><div class="row"><div class="col-8" style="overflow: hidden"> <a class="text-dark" style="overflow: hidden" asp-action="Detail" asp-controller="Home" asp-route-id="@Model[i].BlogId">@Model[i].Content</a></div><div class="col-4"><div class="d-flex justify-content-end"> <a class="btn btn-dark" asp-action="CommentUpdate" asp-controller="Admin" asp-route-commentId="@Model[i].Id">Düzenle</a><a class="btn btn-outline-dark ml-2" asp-action="CommentRemove" asp-controller="Admin" asp-route-commentId="@Model[i].Id">Sil</a></div></div> </div></li>
				}
			</ul>
		</div>
	</div>
</div>

