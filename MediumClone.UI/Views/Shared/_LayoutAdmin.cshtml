<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	<link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
	@RenderSection("css", false)
</head>
<body>
	@*navbar
	aside
	main*@

	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<a class="navbar-brand" asp-action="Blogs" asp-controller="Admin">Admin</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNav">
			<ul class="navbar-nav">
				<li class="nav-item active">
					@if(User.Identity.IsAuthenticated)
					{
						<a class="nav-link" asp-action="LogOut" asp-controller="Account">Çıkış Yap</a>
					}
				</li>
				<li>
					<a class="nav-link" asp-action="Index" asp-controller="Home" target="_blank">Check WebSite</a>
				</li>

				@*if (User.Identity.IsAuthenticated)
				{
							<li class="nav-item active">
								<a class="nav-link" asp-action="Create" asp-controller="Home">Create<span class="sr-only">(current)</span></a>
							</li>
				}*@

			</ul>
		</div>
	</nav>

	<div class="container-fluid">
		<div class="row">
			<div class="col-2 bg-secondary" style="height: 94vh">
				<h6 class="mt-2 text-white">Menu</h6>
				<ul class="list-unstyled text-white" style="font-size: large; font-weight: bold;">
					<li><a class="btn btn-outline-dark d-block mb-2 text-white" asp-action="Blogs" asp-controller="Admin">Blogs</a></li>
					<li><a class="btn btn-outline-dark d-block mb-2 text-white" asp-action="Categories" asp-controller="Admin">Categories</a>	</li>
					<li><a class="btn btn-outline-dark d-block mb-2 text-white" asp-action="Comments" asp-controller="Admin">Comments</a></li>
				</ul>

			</div>
			<div class="col-10 " style="height: 94vh">
				<div>
					@RenderBody()
				</div>
			</div>
		</div>
	</div>

	@RenderSection("script", false)
</body>
</html>
